# Database
POSTGRES_USER=gemup_user
POSTGRES_PASSWORD=gemup_secure_password_2025!
POSTGRES_DB=gemup_marketplace
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://gemup_user:gemup_secure_password_2025!@db:5432/gemup_marketplace
DATABASE_ECHO=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# App settings
APP_NAME=Gemup Marketplace
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-change-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000,http://localhost:8080

# Cache
CACHE_DEFAULT_TTL=3600
CACHE_SESSION_TTL=86400
CACHE_CART_TTL=7200
CACHE_PROXY_TTL=2592000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Guest settings
GUEST_SESSION_EXPIRE_HOURS=24
GUEST_CART_EXPIRE_HOURS=2

# Cryptomus (ПУСТЫЕ для разработки - будут мокаться)
CRYPTOMUS_API_KEY=test-dev-key-placeholder
CRYPTOMUS_MERCHANT_ID=test-dev-merchant-placeholder
CRYPTOMUS_WEBHOOK_SECRET=test-dev-webhook-secret
CRYPTOMUS_BASE_URL=https://api.cryptomus.com/v1

# Proxy providers (ПУСТЫЕ для разработки - будут мокаться)
PROVIDER_711_API_KEY=test-dev-711-key
PROVIDER_711_BASE_URL=https://api.711proxy.com
PROXY_SELLER_API_KEY=test-dev-seller-key
PROXY_SELLER_BASE_URL=https://proxy-seller.com/api
LIGHTNING_API_KEY=test-dev-lightning-key
LIGHTNING_BASE_URL=https://api.lightningproxies.com
GOPROXY_API_KEY=test-dev-goproxy-key
GOPROXY_BASE_URL=https://api.goproxy.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email (опционально для разработки)
