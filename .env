# Database
POSTGRES_USER=gemup_user
POSTGRES_PASSWORD=gemup_secure_password_2025!
POSTGRES_DB=gemup_marketplace
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_ECHO=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# App settings
APP_NAME=Gemup Marketplace
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-change-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000,http://localhost:8080

# Cache
CACHE_DEFAULT_TTL=3600
CACHE_SESSION_TTL=86400
CACHE_CART_TTL=7200
CACHE_PROXY_TTL=2592000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Guest settings
GUEST_SESSION_EXPIRE_HOURS=24
GUEST_CART_EXPIRE_HOURS=2

# URL settings
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Cryptomus payment settings
CRYPTOMUS_API_KEY=test-dev-key-placeholder
CRYPTOMUS_MERCHANT_ID=test-dev-merchant-placeholder
CRYPTOMUS_WEBHOOK_SECRET=test-dev-webhook-secret
CRYPTOMUS_BASE_URL=https://api.cryptomus.com/v1

# 711 Proxy settings (имена переменных)
PROXY_711_API_KEY=test-dev-711-key
PROXY_711_USERNAME=
PROXY_711_PASSWORD=
PROXY_711_BASE_URL=https://service.711proxy.com/api

# ProxySeller settings
PROXY_SELLER_API_KEY=test-dev-seller-key
PROXY_SELLER_BASE_URL=https://proxy-seller.com/api

# Lightning Proxies settings
LIGHTNING_API_KEY=test-dev-lightning-key
LIGHTNING_BASE_URL=https://api.lightningproxies.com

# GoProxy settings
GOPROXY_API_KEY=test-dev-goproxy-key
GOPROXY_BASE_URL=https://api.goproxy.com

# SmartProxy settings
SMARTPROXY_API_KEY=
SMARTPROXY_BASE_URL=https://api.smartproxy.com/v1

# Oxylabs settings
OXYLABS_API_KEY=
OXYLABS_USERNAME=
OXYLABS_PASSWORD=
OXYLABS_BASE_URL=https://api.oxylabs.io/v1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# File upload settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=txt,csv,json

# Email settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@gemup.com
SMTP_FROM_NAME=Gemup Marketplace

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
