ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-production-secret-key-32-chars-minimum-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

DATABASE_URL=postgres://gemup_user:password@dpg-xxxxx-a.oregon-postgres.render.com:5432/gemup_marketplace

# URLs для Render
BASE_URL=https://gemup-marketplace-backend.onrender.com
FRONTEND_URL=https://gemup-marketplace-frontend.onrender.com
CORS_ORIGINS=https://gemup-marketplace-frontend.onrender.com

# Cache settings
CACHE_DEFAULT_TTL=3600
CACHE_SESSION_TTL=86400
CACHE_CART_TTL=7200
CACHE_PROXY_TTL=2592000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW=300

# Guest settings
GUEST_SESSION_EXPIRE_HOURS=24
GUEST_CART_EXPIRE_HOURS=2

# Circuit breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Production API keys (замените на реальные)
CRYPTOMUS_API_KEY=your-real-cryptomus-api-key
CRYPTOMUS_MERCHANT_ID=your-real-merchant-id
CRYPTOMUS_WEBHOOK_SECRET=your-real-webhook-secret

PROXY_711_API_KEY=your-real-711proxy-api-key
PROXY_SELLER_API_KEY=your-real-proxyseller-api-key
LIGHTNING_API_KEY=your-real-lightning-api-key
GOPROXY_API_KEY=your-real-goproxy-api-key

# Logging
LOG_LEVEL=INFO

# API
API_PREFIX=/api/v1
DOCS_URL=
REDOC_URL=

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
